<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Settings"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="settings"
        android:text="SETTINGS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/allPosts"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="allPosts"
        android:text="ALL POSTS"
        app:layout_constraintBottom_toTopOf="@+id/myPosts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/inspector"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="inspector"
        android:text="INSPECTOR VIEW"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addForm"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/myPosts"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="myPosts"
        android:text="MY POSTS"
        app:layout_constraintBottom_toTopOf="@+id/addForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addForm"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="addform"
        android:text="Add form"
        app:layout_constraintBottom_toTopOf="@+id/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/report"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:onClick="report"
        android:text="REPORT"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>